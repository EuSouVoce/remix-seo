{
	"exclude": ["node_modules"],
	"include": ["remix.env.d.ts", "jest.d.ts", "src/**/*", "test/**/*"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"target": "ES2020",
		"module": "ES2020",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true
	}
}
